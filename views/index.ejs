
      <!-- include header -->
      <%- include('partials/header.ejs') %> <% if(quotesList.length > 0 ) { %>
      <h1 class="test text-2xl font-bold px-5 p-3 mx-auto">
        What Others Say About The Nigerian Situation
      </h1>
      <% } else { %>
      <h1 class="test text-2xl font-bold px-5 p-3 mx-auto">
        Quote list is empty, do have a say.
      </h1>
      <% } %>

      <div
        class="h-auto flex flex-wrap justify-center items-center gap-6 w-11/12 md:w-5/6 rounded-xl mx-auto bg-slate-600 p-4 sm:p-8"
      >
        <!-- ensure you do not map on an empty array -->
        <% if(locals.quotesList) { %> <% quotesList.map(quote => { %>
        <div class="flex sm:w-5/6 flex-col max-w-sm text-xl rounded-2xl">
          <h3
            class="text-left bg-slate-700 hover:bg-slate-800 hover:text-2xl p-2 rounded-t-2xl overflow-auto h-32 w-full"
          >
            <%= quote.quotes %>
          </h3>
          <h3
            class="text-center bg-slate-700 hover:bg-slate-800 hover:text-2xl p-2 rounded-b-2xl h-14 pb-4 w-full flex items-center justify-center"
          >
            <% if(quote.author ) { %> by <%= quote.author %> <% } else { "" }%>
          </h3>
          <div class="flex justify-center items-center">
            <button
              class="px-2 bg-sky-500 rounded-md mr-3 w-24 sm:w-24 hover:bg-slate-700"
            >
              <a href="/edit/<%= quote.id %>">Edit</a>
            </button>
            <button class="px-2 bg-red-500 rounded-md w-24 sm:w-24 hover:bg-slate-700">
              <a href="/delete/<%= quote.id %>">Delete</a>
            </button>
          </div>
        </div>
        <% })} else { %>
        <h1 class="text-center text-xl font-semibold">
          Quote list is empty, create a quote or more.
        </h1>
        <% } %>
      </div>
      <form action="/quotesForm" method="GET">
        <input
          type="submit"
          value="New Quote?"
          class="font-bold text-lg text-center cursor-pointer bg-slate-500 w-32 hover:bg-slate-700 text-white mx-auto py-2 px-4 mb-3 mt-4 rounded-xl focus:outline-none focus:shadow-outline"
        />
      </form>
      <!-- include footer -->
    <%- include('partials/footer.ejs') %>
    
